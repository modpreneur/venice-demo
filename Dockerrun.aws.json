{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "php-app",
      "host": {
        "sourcePath": "/var/app/current"
      }
    },
    {
      "name" : "nginx-css-conf",
      "host" : {
        "sourcePath": "/var/app/current/docker/nginx/css.conf"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "php_fpm",
      "image": "modpreneur/necktie-fpm:0.9",
      "entryPoint": ["sh", "./entrypoint.sh"],
      "essential": true,
      "memory": 768,
      "portMappings": [
        {
          "hostPort": 9003,
          "containerPort": 9003
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "php-app",
          "containerPath": "/var/app"
        },
        {
          "sourceVolume": "awseb-logs-php_fpm",
          "containerPath": "/var/log/sample-app"
        }
      ]
    },
    {
      "name": "nginx-proxy",
      "image": "modpreneur/necktie-nginx:0.3",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "php_fpm"
      ],
      "mountPoints": [
        {
          "sourceVolume": "php-app",
          "containerPath": "/var/app",
          "readOnly": true
        },
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/var/log/nginx"
        },
        {
          "sourceVolume": "nginx-css-conf",
          "containerPath": "/etc/nginx/sites-available/css.conf",
          "readOnly": true
        }
      ]
    }
  ]
}