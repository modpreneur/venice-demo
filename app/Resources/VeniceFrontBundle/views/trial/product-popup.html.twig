<input type="checkbox" id="bundle-product-modal-input" class="display-none">
<div class="trial-flow bundle-product-flow">
    <label for="bundle-product-modal-input" class="trial-modal-label trial-modal-open"></label>
    <div class="trial-flow-wrapper">
        <label for="bundle-product-modal-input" class="trial-modal-label-cross trial-modal-open"><i class="ff-cross2"></i></label>

        <h1>Interested In {{ product.name }}?</h1>
        <p class="long-text">Why not add your favorite payment method and get an additional 7&nbsp;days FREE, PLUS we'll unlock:</p>

        <div class="text-center">
            <ul>
                {% if product.name != "Nutrition and Meals" %}<li>Nutrition and Meals</li>{% endif %}
                {% if product.name != "7 Day Rip Mix" %}<li>7 Day Rip Mix</li>{% endif %}
                {% if product.name != "Platinum Mix" %}<li>Platinum Mix</li>{% endif %}
                <li>Other Surprise Bonuses</li>
            </ul>
        </div>

        <a href="{{ path('buy_link_extend_trial') }}" class="button button-card" id="pop-3-day-7day-take">YES! Unlock my bonuses</a>
        <label for="bundle-product-modal-input" class="button button-another" id="pop-3-day-7day-no">NO, take me to FLO FIT</label>
    </div>
</div>

<script>
    $(document).ready(function () {
        ga('send', 'event', 'product-detail-be', 'interested-{{ product.handle }}-open', '{% if app.user.facebookId is not null %}{{ app.user.facebookId }}{% else %}email{% endif %}');

        $("#pop-3-day-7day-take").click(function () {
            ga('send', 'event', 'product-detail-be', 'interested-{{ product.handle }}-take', '{% if app.user.facebookId is not null %}{{ app.user.facebookId }}{% else %}email{% endif %}');
        });
        $("#pop-3-day-7day-no").click(function () {
            ga('send', 'event', 'product-detail-be', 'interested-{{ product.handle }}-no', '{% if app.user.facebookId is not null %}{{ app.user.facebookId }}{% else %}email{% endif %}');
        });
    });
</script>