{% block content %}
    <div class="dashboard-main-content">
        <div class="row margin-top-10 display-inline-block">
            {% if firstLogin %}
                <div id="widget-homepage" class="widgets">
                    <div id="dashboard-mobile-qsg">
                        <div class="span-medium-24 mobile-app-padding">
                            <div class="start-guilde-box">
                                <label for="start-guilde" class="start-guide-label">
                                    <span>Quick Start <span>Guide</span><i class="ff-arrow-light-long-right"></i></span>
                                </label>
                                <label onclick="ActionsLogger.logAction('QUICKSTART-GUIDE-ADVERTISEMENT-CLOSE');closeDashboardMobileQSG();" for="close-download-mobile-app" class="close-guilde-box"><i class="ff ff-cross2"></i></label>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}


            <div class="span-none-padding-medium-24 product-list-box product-list-box-2">
                <div class="row text-center">
                    <div class="span-medium-12 padding-top-20 padding-right-10">
                        <div class="product-item product-item-flofit">
                            <a href="{{ path("downloads_dashboard") }}">
                                <img src="{{ asset('Resources/public/images/site/dashboard-flo-fit.jpg') }}" alt="FLO FIT" class="img-responsive margin-auto" />
                                <h1>YOUR <span>FLO FIT</span><span class="text-products">products</span><i class="ff-arrow-light-long-right display-block"></i></h1>
                            </a>
                        </div>
                    </div>
                    <div class="span-medium-12 padding-top-20 padding-left-10">
                        <div class="product-item product-item-platinum">
                            <a href="{{ path("downloads_product_flomersion") }}">
                                <img src="{{ asset('Resources/public/images/site/flofit-dash-4.jpg') }}" alt="Platinum" class="img-responsive margin-auto" />
                                <h1>Platinum <span>club</span><i class="ff-arrow-light-long-right display-block"></i></h1>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            {% if firstLogin %}
                <div id="widget-homepage" class="widgets">
                    <div id="dashboard-mobile-adv">
                        <div class="span-medium-24 mobile-app-padding">
                            <div class="download-mobile-app row">
                                <h1>Get the FREE App to Access FLO&nbsp;FIT<small>On Your Phone or Tablet</small></h1>
                                <div class="download">
                                    <a data-log-click="MOBILE-APP-ADVERTISEMENT-IOS" href="https://itunes.apple.com/cz/app/flo-fit/id1052231777"><img src="{{ asset('Resources/public/images/site/dash-mobile-app-apple.png') }}" alt="Apple" class="img-responsive"/></a>
                                    <a data-log-click="MOBILE-APP-ADVERTISEMENT-ANDROIDMOBILE-APP-ADVERTISEMENT-IOS" href="https://play.google.com/store/apps/details?id=com.digitalshelfspace.flofit"><img src="{{ asset('Resources/public/images/site/dash-mobile-app-android.png') }}" alt="Android" class="img-responsive"/></a>
                                </div>
                                <label onclick="ActionsLogger.logAction('MOBILE-APP-ADVERTISEMENT-CLOSE');closeDashboardMobileAdv();" for="close-download-mobile-app"><i class="ff ff-cross2"></i></label>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div id="widget-homepage" class="widgets {% if displayQuickStartGuide and displayMobileAdv %}widget-both{% endif %}">
                    {% if displayQuickStartGuide %}
                        <div id="dashboard-mobile-qsg">
                            <div class="span-medium-24 mobile-app-padding">
                                <div class="start-guilde-box">
                                    <label for="start-guilde" class="start-guide-label">
                                        <span>Quick Start <span>Guide</span><i class="ff-arrow-light-long-right"></i></span>
                                    </label>
                                    <label onclick="ActionsLogger.logAction('QUICKSTART-GUIDE-ADVERTISEMENT-CLOSE');closeDashboardMobileQSG();" for="close-download-mobile-app" class="close-guilde-box"><i class="ff ff-cross2"></i></label>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                    {% if displayMobileAdv %}
                        <div id="dashboard-mobile-adv">
                            <div class="span-medium-24 mobile-app-padding">
                                <div class="download-mobile-app row">
                                    <h1>Get the FREE App to Access FLO&nbsp;FIT<small>On Your Phone or Tablet</small></h1>
                                    <div class="download">
                                        <a data-log-click="MOBILE-APP-ADVERTISEMENT-IOS" href="https://itunes.apple.com/cz/app/flo-fit/id1052231777"><img src="{{ asset('Resources/public/images/site/dash-mobile-app-apple.png') }}" alt="Apple" class="img-responsive"/></a>
                                        <a data-log-click="MOBILE-APP-ADVERTISEMENT-ANDROIDMOBILE-APP-ADVERTISEMENT-IOS" href="https://play.google.com/store/apps/details?id=com.digitalshelfspace.flofit"><img src="{{ asset('Resources/public/images/site/dash-mobile-app-android.png') }}" alt="Android" class="img-responsive"/></a>
                                    </div>
                                    <label onclick="ActionsLogger.logAction('MOBILE-APP-ADVERTISEMENT-CLOSE');closeDashboardMobileAdv();" for="close-download-mobile-app"><i class="ff ff-cross2"></i></label>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            {% endif %}


            <div class="span-large-8 span-medium-12 padding-left-10 double-box-span">
                <div class="widget-box double-box">
                    <div class="widget-header tertiary">
                        <a href="{{ getForumLink() }}">Last forum posts</a>
                        <i class="ff-chat-conversation"></i>
                    </div>
                    <div class="widget-body">
                        <div class="posts">
                            {% for forumPost in forumPosts %}
                                <a href="{{ forumPost.Url }}">
                                    <div class="post">
                                        <span class="title-post">{{ forumPost.Name }}</span>
                                        <p class="post-tag">{{ forumPost.CategoryName }}</p>
                                        <span class="post-time">{{ forumPost.LastDate|humanDate }}</span>
                                        <span class="post-info">{{ forumPost.CountViews }} views & {{ forumPost.CountComments }} replies</span>
                                        <span class="post-author">by {{ forumPost.author }} </span>
                                    </div>
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="span-large-16 span-medium-12 padding-right-10 blog-box">
                <div class="widget-box">
                    <div class="widget-header default">
                        <a href="{{ path("blog_index") }}">Blog</a>
                        <i class="ff-text-left-page"></i>
                    </div>
                    <div class="widget-body">
                        {% for blogArticle in blogArticles %}
                            <a href="{{ path("blog_post_details",{"handle":blogArticle.handle}) }}">
                                <div class="message">
                                    <div class="item-img-icon absolute">
                                        <div class="rounded">
                                            {#{% if blogArticle.getPublisher is not null and blogArticle.publisher.getprofilePhoto().imageFile != "" %}#}
                                                {#<img src="{{ blogArticle.Publisher.getProfilePhoto.croopedPhotoUrl }}" alt="profile image"/>#}
                                            {#{% else %}#}
                                                <img src="{{ asset('Resources/public/images/site/default-profile-photo.png') }}" alt="profile image"/>
                                            {#{% endif %}#}
                                        </div>
                                    </div>
                                    <div class="message-content">
                                        <div class="name">{{ blogArticle.Title }}</div>
                                        <div class="name user-name">{{ blogArticle.publisher }}</div>
                                        {% if blogArticle.dateToPublish is not null %}
                                            <span class="date">{{ blogArticle.dateToPublish|date("m/d/Y") }}</span>
                                        {% else %}
                                            <span class="date">{{ blogArticle.dateWritten|date("m/d/Y") }}</span>
                                        {% endif %}
                                        <p>{{ blogArticle.getPreview|raw }}</p>
                                    </div>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="span-large-8 span-medium-12 padding-none-right messenger-block-box">
                <div class="widget-box">
                    <div class="widget-header secondary">
                        <a href="{{ getMessagesLink() }}">Messages</a>
                        <i class="ff-chat-dotted-left"></i>
                    </div>
                    <div class="widget-body">
                        {% for conversation in messages %}
                            <a href="{{ communityForumUrl ~ "/messages/" ~ conversation.conversationId }}">
                                <div class="message">
                                    <div class="item-img-icon absolute">
                                        <div class="rounded">
                                            {% if conversation.participants|length > 1 %}
                                                <img src="{{ asset('Resources/public/images/site/default-conversation-photo.png') }}" alt="conversation profile images"/>
                                            {% else %}
                                                {% if conversation.participants is not empty and conversation.participants[0] is iterable and conversation.participants[0].profilePhoto is not null %}
                                                    <img src="{{ conversation.participants[0].profilePhoto.croopedPhotoUrl }}" alt="profile image"/>
                                                {% else %}
                                                    <img src="{{ asset('Resources/public/images/site/default-profile-photo.png') }}" alt="profile image"/>
                                                {% endif %}
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="message-content">
                                        <div class="name">
                                            {% for participant in conversation.participants %}
                                                {% spaceless %}
                                                    {% if loop.index != 1 %},{% endif %}
                                                    {% if participant is iterable %}
                                                        <a href="{{ path("core_front_user_public_profile",{"username":participant.username}) }}">{{ participant.fullName }}</a>
                                                    {% else %}
                                                        {{ participant }}
                                                    {% endif %}
                                                {% endspaceless %}
                                            {% endfor %}
                                        </div>
                                        <p>{{  conversation.LastBody }}</p>
                                    </div>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="span-large-8 span-medium-12 padding-right-10 social-box">
                <div class="widget-box">
                    <div class="widget-header primary">
                        <a href="">Social stream</a>
                        <i class="ff-share"></i>
                    </div>
                    <div class="widget-body">
                        {% for post in socialPosts %}

                            <a href="{{ post.url }}" target="_blank">
                                <div class="message">
                                    <div class="item-img-icon absolute">
                                        <div class="rounded">
                                            <img src="{{ post.profilePic }}" alt="profile image"/>
                                        </div>
                                        <i class="{% if post.type == "facebook" %} ff-social-fb {% endif %}
                                              {% if post.type == "twitter" %} ff-social-twitter {% endif %}
                                              {% if post.type == "instagram" %} ff-social-instagram {% endif %}
                                              ">
                                        </i>
                                    </div>
                                    <div class="message-content">
                                        <div class="name">{{ post.author }}<span class="date">{{ post.dateTime|humanDate }}</span></div>
                                        <p>{{  post.message }}</p>
                                    </div>
                                </div>
                            </a>
                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}