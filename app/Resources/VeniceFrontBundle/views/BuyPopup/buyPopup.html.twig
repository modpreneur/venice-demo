{% if bundleProduct is not null and bundleProduct.buyCBParameters is not null %}
<div id="buy-modal">
    <label for="buy-modal-input" class="buy-modal-label buy-modal-open"></label>
    <div class="buy-modal-wrapper">
        <label for="buy-modal-input" class="buy-modal-open"><i class="ff-cross2"></i></label>
        <h1><small>Purchase</small></h1>

        <div class="row final-price">
            <span>{{ bundleProduct.name }}</span>

            {% if bundleProduct.buyCBParameters.price %}
                <span class="price">{{ bundleProduct.buyCBParameters.price }}</span>
            {% else %}
                <span class="price">{{ generatePriceString(bundleProduct.buyCBParameters) }}</span>
            {% endif %}
        </div>
        <div class="row">
            {# @todo text
            {% if bundleProduct.buyCBParameters.hasSmallTextAboveButtons %}
                <span class="text margin-bottom-5">{{ bundleProduct.buyCBParameters.smallTextAboveButtons }}</span>
            {% endif %}
            #}
            <span class="text margin-bottom-5">smallTextAboveButtons</span>

            <a href="{{ generateOCBLink(product,true) }}" class="button button-card tooltip">
                Purchase with your <span>{{ getLastCard() }}</span> card
                <div class="tooltip-hover">(?)
                    <div class="tooltip-top">On your last purchase, your payment method was stored for your convenience</div>
                </div>
            </a>
            <a class="button button-another" href="{{ generateOCBLink(bundleProduct,false) }}">
                Use another payment method
            </a>
            <p>(?) On your last purchase, your payment method was stored for your convenience</p>
        </div>
    </div>
</div>
{% endif %}