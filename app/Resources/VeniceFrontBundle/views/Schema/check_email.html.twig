{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block bodyFullReset %}reset-pass-step-body{% endblock %}

{% block fos_user_content %}
    <div class="login-main signup upsell">
        <div class="section header-main-logo">
            <div class="container">
                <div class="row">
                    <div class="span-mini-24">
                        <i class="ff-flofitlogo display-block"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="section login">
            <div class="container">
                <div class="row">
                    <div class="span-mini-24">
                        <span class="text-login">Reset Password</span>
                        <br>
                        <span class="color-white font-20">An email has been sent to your email. It contains an activation link you must click to activate your account.</span>
                        <form action="{{ path('fos_user_security_login') }}" class="user-form margin-top-30">
                            <input id="_submit" type="submit" value="Back to Log in">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="section main-footer">
        <div class="container">
            <footer>
                <div class="row block relative">
                    <div class="block-left">
                        <p><span>FLO FIT &copy; {{ "now"|date("Y") }}</span> Burn It Now Productions, Inc. FLO FIT and FLO RIDA trademarks, name, image, and likeness are owned by FLO RIDA and FLO FIT Holdings LLC, and are being used under license by Flo Life LLC. All rights reserved.</p>
                    </div>
                    <div class="block-right">
                        <div class="navbar">
                            <ul>
                                {{ footerLinksBlock() }}
                            </ul>
                        </div>
                    </div>
                    <div class="block-center text-center">
                        <a href="{{ path("landing_page") }}"><i class="ff-flofitlogo"></i></a>
                    </div>
                </div>
            </footer>
        </div>
    </div>
{% endblock %}