                        <div class="hr"></div>
                        <div class="block-left">
                            <a href="#exercises" class="nice-scroll">Exercises</a>
                        </div>
                        <div class="block-center">
                        </div>
                        <div class="block-right">
                            <a href="#articles" class="nice-scroll current current_ancestor">Articles</a>
                        </div>
                    </div>

                    {% for article in articles %}
                        <div class="downloads-dashboard row">
                            <div class="span-medium-17 span-large-18">
                                <a href="{{ path("blog_post_details",{"handle":article.handle}) }}"><span class="name">{{ article.title }}</span></a>
                                <a href="{{ path("blog_post_details",{"handle":article.handle}) }}"><div class="description">{{ article.preview | striptags | raw }}</div></a>
                            </div>
                            <div class="span-medium-7 span-large-6 button-row">
                                <a href="{{ path("blog_post_details",{"handle":article.handle}) }}" class="button button-functional"><i class="ff-text-left-big"></i>Read more</a>
