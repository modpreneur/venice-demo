{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="login-main error-page">
        <div class="section login">
            <div class="container">
                <div class="row">
                    <div class="span-mini-24">
                        <a href="{{ path("landing_page") }}"><i class="ff-flofitlogo display-inline-block"></i></a>
                    </div>
                    <div class="span-mini-24">
                        <div class="error-text">
                            <i class="ff-exclamation-mark4"></i><span>500 error</span>
                        </div>
                    </div>
                    <div class="span-mini-24">
                        <a class="button button-primary" href="{{ path("landing_page") }}">homepage</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="section register">
            <div class="container">
                <div class="row">
                    <div class="span-medium-7 florida-guarantee">
                        <img src="{{ asset('Resources/public/images/site/florida-login.png') }}" alt=""/>
                    </div>
                    <div class="span-large-10">
                        <span class="another">Don't have an account yet?</span>
                        <span class="robot">Look at our offer and get your FLO FIT today!</span>
                        <img src="{{ asset('Resources/public/images/site/login-arrow.png') }}" alt="" class="login-arrow"/>
                    </div>
                    <div class="span-large-7 text-center">
                        <a class="button button-register" href="">GET ACCESS NOW!</a>
                        <img src="{{ asset('Resources/public/images/site/register-card.png') }}" alt="" class="cards" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="section main-footer">
        <div class="container">
            <footer>
                <div class="row block relative">
                    <div class="block-left">
                        <p><span>FLO FIT &copy; {{ "now"|date("Y") }}</span> Burn It Now Productions, Inc. FLO FIT and FLO RIDA trademarks, name, image, and likeness are owned by FLO RIDA and FLO FIT Holdings LLC, and are being used under license by Flo Life LLC. All rights reserved.</p>
                    </div>
                    <div class="block-right">
                        <div class="navbar">
                            <ul>
                                {% if app.user %}
                                    {# @todo id #}
                                    <li><a title="Support" class="fancybox fancybox-margin fancybox-support" data-fancybox-type="iframe" href="//resultsink.desk.com/customer/widget/emails/new?ticket%5Bcustom_refpage%5D=my.flofit.com&interaction%5Bname%5D={{ app.user.firstName }}%20{{ app.user.lastName }}&interaction%5Bemail%5D={{ app.user.email }}&ticket%5Bcustom_refpage%5D=my.flofit.com&ticket%5Bcustom_user_id%5D={{ app.user.id }}&ticket%5Bcustom_username%5D={{ app.user.username }}">Help</a></li>
                                {% else %}
                                    <li><a title="Support" class="fancybox fancybox-margin fancybox-support" data-fancybox-type="iframe" href="//resultsink.desk.com/customer/widget/emails/new?ticket%5Bcustom_refpage%5D=my.flofit.com">Help</a></li>
                                {% endif %}
                                {{ footerLinksBlock() }}
                            </ul>
                        </div>
                    </div>
                    <div class="block-center text-center">
                        <a href="{{ path("landing_page") }}"><i class="ff-flofitlogo"></i></a>
                    </div>
                </div>
            </footer>
        </div>
    </div>
{% endblock fos_user_content %}
